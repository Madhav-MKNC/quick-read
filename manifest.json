{
  "manifest_version": 3,
  "name": "Bionic Readable",
  "version": "1.0",
  "description": "Convert selected text into bionic readable format.",
  "permissions": ["activeTab", "contextMenus"],
  "icons": {
    "128": "imgs/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "imgs/icon-128.png"
    }
  },
  "contextMenus": {
    "id": "convertToBionicText",
    "title": "Convert to Bionic Readable Text",
    "contexts": ["selection"]
  },
  "web_accessible_resources": [
    {
      "resources": ["imgs/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
